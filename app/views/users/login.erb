<h1>Login Here!</h1>

<% if @errors %>
  <div>
    <span>Something went wrong:</span>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action='/users/login' method='POST'>
	Username: <input type='text' name='user[username]', placeholder='Username'>
	<br>
	Password: <input type='password' name='user[password]' placeholder='Password'>
	<br>
	<input type='submit' value='Login'>
</form>