<h1><%= @user.username %>'s Decks</h1>

<div class="user_deck_list">
  <ul>
    <li>
      <ul>
        <li>Deck Name</li><li>Description</li><li>Number of Cards</li><br>
      </ul>
    </li>
    <% @user.created_decks.each do |deck| %>
      <li>
        <ul>
          <a href="../../../decks/<%= deck.id %>">
            <li><%= deck.name %></li><li><%= deck.snippet %></li><li><%= deck.cards.length %></li>
          </a>
          <a href="../../../decks/<%= deck.id %>/edit"><li>edit deck</li></a>
        </ul>
      </li>
    <% end %>
  </ul>
</div>

<a href='/decks/new'>Create a Deck</a>
